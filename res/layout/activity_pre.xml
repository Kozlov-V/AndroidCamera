<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:fillViewport="true">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:baselineAligned="false">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.25">
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5" android:background="#a3a5a7">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Begin recording"
                        android:id="@+id/textView"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textIsSelectable="false"
                        android:textStyle="bold|normal"
                        android:padding="3dp"
                        android:background="#3d3f4b"  android:textColor="#ffffff"/>
                <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" android:measureWithLargestChild="false" android:minHeight="15dp"
                        android:layout_marginTop="10dp">
                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">
                    </LinearLayout>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Go to record"
                            android:id="@+id/btnGoRec"
                            android:textStyle="bold"
                            android:background="#666768" android:shadowColor="#464748"
                            android:layout_weight="0.5" android:padding="5dp"
                            android:longClickable="false"/>
                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">
                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text='Press the "go to record" and prepare yourself to start recording'
                        android:id="@+id/textView1"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" android:layout_weight="0.1"/>
                <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:orientation="vertical" android:layout_weight="0.1">
                    <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:id="@+id/imageView" android:src="@drawable/vide_me"
                            android:layout_gravity="center_horizontal|bottom" android:layout_marginTop="10dp" android:adjustViewBounds="false"
                            android:clickable="true" android:background="#a2a4a6"
                            />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.25">
            </LinearLayout>
        </LinearLayout>

</ScrollView>